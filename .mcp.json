{
  "mcpServers": {
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "taskmaster-ai": {
      "command": "npx",
      "args": [
        "-y",
        "--package=task-master-ai",
        "task-master-ai"
      ],
      "env": {
        "MODEL": "gemini-pro-preview-05-06",
        "PERPLEXITY_MODEL": "sonar-pro",
        "MAX_TOKENS": "64000",
        "TEMPERATURE": "0.2",
        "DEFAULT_SUBTASKS": "5",
        "DEFAULT_PRIORITY": "medium",
        "DEBUG": "1"
      }
    },
    "github": {
       "command": "npx",
       "args": [
         "-y",
         "@modelcontextprotocol/server-github"
       ],
       "env": {
            "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
       }
    },
    "git": {
       "command": "uv",
       "args": [
         "--directory",
         "/home/memento/ClaudeCode/git_servers/src/git",
         "run",
         "mcp-server-git",
         "--repository",
         "/home/memento/ClaudeCode/pytest-analyzer/llm-pytest-analyzer"
       ]
    },
    "aider": {
      "command": "uv",
      "args": [
        "--directory",
        "/home/memento/ClaudeCode/git_servers/src/aider-mcp-server",
        "run",
        "mcp-aider-server",
        "--server-mode",
        "stdio",
        "--current-working-dir",
        "/home/memento/ClaudeCode/pytest-analyzer/llm-pytest-analyzer"
      ],
      "env": {}
    }
  }
}
