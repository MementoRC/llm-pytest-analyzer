# Vulture configuration for dead code detection
# Exclude directories and files
exclude = [
    "tests/",
    "examples/",
    "docs/",
    ".git/",
    ".venv/",
    "__pycache__/",
    "*.pyc",
    "build/",
    "dist/",
    ".pytest_cache/",
    ".mypy_cache/",
    ".ruff_cache/"
]

# Minimum confidence (0-100) for reporting unused code
min_confidence = 80

# Sort results by confidence
sort_by_size = true

